<h1>Корзина</h1>

<div id="cart">
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название курса</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small btn-danger cart-delete-item" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Цена:</strong><span class="price">{{price}}</span></p>
    {{else}}
    <h5>Корзина пуста!</h5>
    {{/if}}
</div>